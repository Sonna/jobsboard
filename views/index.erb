<table cellspacing="0" class="joblist">
    <thead>
	<tr>
		<th>Posted</th>
		<th>Title</th>
		<th>Company_name</th>
		<th>Location</th>
		<% if logged_in? %>
		<th>Save jobs</th>
		<%end%>
	</tr>
	</thead>
	<tbody>	
 		<% @jobs.each do |job| %>
			<tr>
			    <td><%= job["listingdate"][0..9] %></td>
			    <td><a href="https://www.seek.com.au/job/<%=job["jobid"]%>" target="_blank"><%= job["title"] %></a></td>
			    <td><%= job["description"] %></td>
			    <td><%= job["location"] %></td>
				<% if logged_in? %>
				<td>
					<%if job_saved? job["jobid"] %>
						<form class="save_job" id="save_job" action="/users/unsave_jobs/<%=job["jobid"]%>" method="post">
						<input type="hidden" name="_method" value="delete" class="submit">
						<button class="savejobs">unsaved</button>
						</form>
					<% else %>
						<form class="save_job" id="save_job" action="/users/save_jobs" method="post">
						<input type="hidden" name="save_job" value="<%=job["jobid"]%>" class="submit">
						<button class="savejobs">save_job</button>
						</form>
					<% end %>
					
				</td>
				<%end%>
		    </tr>
	    <% end %>
    </tbody>
</table>